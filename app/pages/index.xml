<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ScrollView>
  <StackLayout>
  	<Image src="res://logo" stretch ="aspectFit" class="logo" />
    <Label text="Welcome" class="title"/>
    <Button text="I am a Doctor" tap="{{ doctorAction }}" />
    <Button text="I am a Patient" tap="{{ patientAction }}" />
    <Label text="{{ message }}" class="message" textWrap="true"/>
  </StackLayout>
</ScrollView>
</Page>
