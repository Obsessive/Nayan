<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ScrollView>
  <StackLayout class="introbg"> 
  	<Image src="res://logo" stretch ="aspectFit" style="width:60%" class="intrologo" />
    <Label text="Welcome" class="title"/>
    <Button text="&#xf0f0; Doctor" class="introbutton font-awesome" tap="{{ doctorAction }}" />
    <Button class="introbutton font-awesome" text="&#xf06e; Patient" tap="{{ patientAction }}" />
    <Label text="{{ message }}" class="message" textWrap="true"/>
  </StackLayout>
</ScrollView>
</Page>
