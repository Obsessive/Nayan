<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="registrationLoaded">
   <ScrollView>
  <StackLayout>
    <Label text="First Name" id="patientregistrationname"/>
    <TextField hint="please enter your fist name" />

    <Label text="Last Name" id="patientregistrationname"/>
    <TextField hint="please enter your last name" />

    <Label text="Number" id="patientregistrationphone"/>
    <TextField hint="please enter your phone number" />

    <Label text="Email" id="patientregistrationemail"/>
    <TextField hint="please enter your email id" />

    <Label text="Referral" id="patientregistrationreferral"/>
    <TextField hint="please enter your Referral code" />

    <Button text="Register" class="globalbutton" tap="{{ registerAction }}" />
  </StackLayout>
</ScrollView>
</Page>
