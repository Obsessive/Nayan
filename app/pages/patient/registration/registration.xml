<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="registrationLoaded">
   <ScrollView>
  <StackLayout>
    <Label text="First Name" />
    <TextField hint="Please enter your First name" id="patientregistrationfirstname"/>

    <Label text="Last Name" />
    <TextField hint="Please enter your Last name" id="patientregistrationlastname"/>

    <Label text="Number" />
    <TextField keyboardType="phone" hint="Please enter your phone number" id="patientregistrationphone"/>

    <Label text="Email" />
    <TextField hint="Please enter your email id" id="patientregistrationemail"/>

    <Label text="Referral" />
    <TextField hint="Please enter your Referral code" id="patientregistrationcode"/>

    <GridLayout rows="40" columns="70,*" marginBottom="20" style="border-radius=5" >
    <Switch id="termsagreedid" checked="{{ termsagree }}" row="0" col="0" style="horizontal-align:left" />
    <Label row="0" col="1" tap="{{ showtermsAction }}" text="I Agree to the terms and conditions"/>
    </GridLayout>
    <Button isEnabled="{{ termsagreed }}" text="&#xf00c; Register" class="globalbutton" tap="{{ registerAction }}" />
  </StackLayout>
</ScrollView>
</Page>
