<Page loaded="dropreminderLoaded">
<ScrollView>
  <StackLayout>

  	<Label text="Select Time to remind on" class="message" textWrap="true"/>
  	<TimePicker id="pickdate" hour="18" minute="30"/>
  	<Label text="Set Reminder for:" class="message" textWrap="true"/>
  	 <SegmentedBar style="vertical-align: center; margin: 20;">
    <SegmentedBar.items>
      <SegmentedBarItem title="Left eye" />
      <SegmentedBarItem title="Right eye" />
      <SegmentedBarItem title="Both eyes" />
    </SegmentedBar.items>
  </SegmentedBar>
  <Label text="Medicine name:" class="message" textWrap="true"/>
    <TextField id="patientdropname" hint="Name of event/appointment" />
   <Button text="Set Reminder" tap="{{ setReminderAction }}" />
  </StackLayout>
</ScrollView>
</Page>