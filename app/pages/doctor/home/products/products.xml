<Page loaded="doctorProductsLoaded">
 	<StackLayout>
		<GridLayout rows="*,auto" columns="*">
		<ListView row="0" col="0" id="doctorproductlist" items="{{ doctorproductlist }}">
			<ListView.itemTemplate>
			<GridLayout rows="auto,auto" columns="*" marginBottom="20" style="border-radius=5" >
				<Image  col="0" row="0" src="{{ product }}" stretch="aspectFit" class="doctorproducts" />
	          <TextView  col="0" row="1" editable="false"  style="width:200;text-align:center" text="{{ name }}" />
	        </GridLayout>
		</ListView.itemTemplate>
	</ListView>
	<GridLayout row="1" col="0" rows="auto" columns="*,*" >
		<Button col="1" row="0" text="NEXT" class="globalbutton" tap="{{ next }}"/>
		<Button col="0" row="0" text="PREVIOUS" class="globalbutton" tap="{{ prev }}"/>
			</GridLayout>
			</GridLayout>
	</StackLayout>
</Page>
